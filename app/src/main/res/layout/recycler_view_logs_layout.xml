<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view_logs_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewAttendanceId"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewAttendanceDate"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCheckInTime"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewAttendanceDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCheckOutTime"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewCheckInTime" />

    <TextView
        android:id="@+id/textViewTotalHoursWorked"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textViewCheckInTime" />

</LinearLayout>